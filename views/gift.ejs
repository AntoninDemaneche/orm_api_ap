<html>
    <head>
        <title>Super Site de Gift</title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.2.3/jquery.min.js" integrity="sha256-8cSgp7XerSMfybQvBpZaA2q3oqeIdohH64HhUo1kAq0=" crossorigin="anonymous"></script>
        <!link rel="stylesheet" href="../public/assets/styles.css">
    </head>
    <body>
        <h1>Upload Gif</h1>
        <div id="giff-table">
            <form action="">
                <input type="text" name="item" placeholder="Add new item...." required>
                <button type="submit">Add Giff</button>
            </form>
            <ul>
                <% for(var i=0; i < gifts.length; i++){ %>
                    <li><%= gifts[i].item %></li>
                <% } %>
            </ul>
        </div>
    </body>
</html>


<style>

body{
    background: #0d1521;
    font-family: tahoma;
    color: #989898;
}

#giff-table{
    position: relative;
    width: 95%;
    background: #090d13;
    margin: 0 auto;
    padding: 20px;
    box-sizing: border-box;
}

#giff-table form:after{
    margin: 0;
    content: '';
    display: block;
    clear: both;
}

input[type="text"]{
    width: 70%;
    padding: 20px;
    background:#181c22;
    border: 0;
    float: left;
    font-size: 20px;
    color: #989898;
}

button{
    padding: 20px;
    width: 30%;
    float: left;
    background: #23282e;
    border: 0;
    box-sizing: border-box;
    color: #fff;
    cursor: pointer;
    font-size: 20px;
}

ul{
    list-style-type: none;
    padding: 0;
    margin: 0;
}

li{
    width: 100%;
    padding: 20px;
    box-sizing: border-box;
    font-family: arial;
    font-size: 20px;
    cursor: pointer;
    letter-spacing: 1px;
}

li:hover{
    text-decoration: line-through;
    background: rgba(0,0,0,0.2);
}

h1{
    background: url(../public/assets/styles.css) no-repeat center;
    margin-bottom: 0;
    text-indent: -10000px;
}
</style>