<html>
    <head>
        <title>Super Site de Gift</title>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.0/jquery.min.js" integrity="sha256-xNzN2a4ltkB44Mc/Jz3pT4iU1cmeR0FkXs4pru/JxaQ=" crossorigin="anonymous"></script>
        <!link rel="stylesheet" href="../public/assets/styles.css">
        <meta charset="utf-8">
        <meta http-equiv="x-ua-compatible" content="ie=edge">
        <script src="https://code.jquery.com/jquery-3.3.1.js"  integrity="sha256-2Kok7MbOyxpgUVvAk/HJ2jigOSYS2auK4Pfzbm7uH60="  crossorigin="anonymous"></script>
        <!script src="../public/assets/gift-site.js"></script>
    </head>
    <body>
        <h1>Upload Gif</h1>
        <div id="giff-table">
            <form method='post'>
                <input type="text" name="item" placeholder="Ajouter un nouveau gif ...." required/>
                <button type="submit">Add Gif</button>
            </form>
            <ul>
                <% gifts.forEach(function(data) { %>
                    <li><%= data.item %></li>
               <% }); %>
            </ul>
        </div>
    </body>
</html>


<style>

body{
    background: #242531;
    font-family: tahoma;
    color: #daf5f4;
}

#giff-table{
    position: relative;
    width: 95%;
    background: #090d13;
    margin: 0 auto;
    padding: 20px;
    box-sizing: border-box;
}

#giff-table form:after{
    margin: 0;
    content: '';
    display: block;
    clear: both;
}

input[type="text"]{
    width: 70%;
    padding: 20px;
    background:#181c22;
    border: 0;
    float: left;
    font-size: 20px;
    color: #989898;
}

button{
    padding: 20px;
    width: 30%;
    float: left;
    background: #23282e;
    border: 0;
    box-sizing: border-box;
    color: #fff;
    cursor: pointer;
    font-size: 20px;
}

ul{
    list-style-type: none;
    padding: 0;
    margin: 0;
}

li{
    width: 100%;
    padding: 20px;
    box-sizing: border-box;
    font-family: arial;
    font-size: 20px;
    cursor: pointer;
    letter-spacing: 1px;
}

li:hover{
    text-decoration: line-through;
    background: rgba(0,0,0,0.2);
}

h1{
    background: url('../public/assets/logo.png') no-repeat center;
    margin-bottom: 0;
    text-indent: -10000px;
}
</style>